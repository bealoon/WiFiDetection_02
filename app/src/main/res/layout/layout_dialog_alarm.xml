<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_dialog_alarm"
        android:paddingVertical="@dimen/item_padding_10"
        android:orientation="vertical">
        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:minHeight="@dimen/item_common_height"
            style="@style/text_white_title"/>

        <TextView
            android:id="@+id/dialog_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            style="@style/text_white_16"
            android:visibility="visible"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35"
        android:layout_marginTop="@dimen/item_padding_10"
        android:paddingHorizontal="@dimen/item_margin_10"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_positive"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            style="@style/text_white_12"
            android:background="@drawable/selected_confirm_button"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btn_negative"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            style="@style/text_white_12"
            android:background="@drawable/selected_danger_button"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/item_padding_5"
            android:layout_marginStart="@dimen/item_padding_5" />

        <Button
            android:id="@+id/btn_negative2"
            android:layout_width="0dip"
            style="@style/text_gray_12"
            android:background="@drawable/selected_cancel_button"
            android:drawableRight="@drawable/ic_mode_edit_black_24dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/item_padding_5"
            android:layout_marginStart="@dimen/item_padding_5"
            android:layout_weight="1"/>
        
    </LinearLayout>
</LinearLayout>